{
  "name": "abecedary",
  "version": "1.0.3",
  "description": "Crossdomain JavaScript test runner for Mocha.",
  "author": "Code School (http://codeschool.com)",
  "contributors": [
    "Adam Fortuna <adam@codeschool.com>",
    "Russell Centanni <russell@codeschool.com>"
  ],
